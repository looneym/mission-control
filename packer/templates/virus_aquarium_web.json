{
  "builders": [
    {   
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },  
        "owners": [
          "099720109477"
        ],  
        "most_recent": true
      },  
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "virus_aquarium_web {{timestamp}}",
      "tags": {
        "Name": "virus_aquarium_web"
      }
    }
  ],  
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-add-repository ppa:ansible/ansible",
        "sudo apt-get update  -y",
        "sudo apt-get install -y ansible"
      ]
    },
    {   
      "type": "file",
      "source": "files/hello_world.sh",
      "destination": "/tmp/hello_world.sh"
    },
    {   
      "type": "shell",
      "script": "scripts/setup_virus_aquarium_web.sh"
    },
     {
      "type": "ansible-local",
      "playbook_file": "ansible-example-ruby/playbook.yml",
      "playbook_dir": "ansible-example-ruby"
    }
  ]
}
